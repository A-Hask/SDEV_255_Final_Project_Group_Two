<!DOCTYPE html>
<%- include ('./partials/head.ejs') %>
<html lang="en">
    <%- include ('./partials/nav.ejs') %>

    <div class="details content">
        <h2><%= course.name %></h2>
        <p><%= course.description %></p>
        <% if (user.teacher) { %>
        <a class="delete" data-doc="<%=course._id %>" src="../public/trashcan.svg">Delete</a>
        <% } else { %>
        <a class="add" data-doc="<%=course._id %>" src="../public/plus.svg">Add to my schedule</a>
        <% } %>
    </div>
    <%- include ('./partials/footer.ejs') %> 
 
    <script>
        const trashcan = document.querySelector('a.delete');

        trashcan.addEventListener('click', (e) => {
            const endpoint = `/courses/${trashcan.dataset.doc}`;

            fetch(endpoint, {
                method: `DELETE`
            })
            .then(response => response.json())
            .then(data => window.location.href = data.redirect)
            .catch(err => console.log(err));
        })
    </script>

<script>
    const plus = document.querySelector('a.add');

    plus.addEventListener('click', (e) => {
        const endpoint = `/schedule/${plus.dataset.doc}`;

        fetch(endpoint, {
            method: `POST`
        })
        .then(response => response.json())
        .then(data => window.location.href = data.redirect)
        .catch(err => console.log(err));
    })
</script>


</html>